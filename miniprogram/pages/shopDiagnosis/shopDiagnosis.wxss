/**index.wxss**/

page {
 
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  color:rgb(128,128,128);
  
}
.container{
  margin-top:-16rpx;
}
.form{
  margin-top:100rpx;
  border: 20rpx solid #fececd;
  border-radius:10rpx;
  width:600rpx;
  padding-left:30rpx;
  padding-right: 30rpx;
  padding-bottom: 20rpx;
  margin-bottom: 50rpx;
  background-color: white;
}
.form_element {
margin-top:40rpx;
}
.form_title {
  font-weight: bold;
  color: black
}
.form_element_space{
margin-top:20rpx;
}
.form input {
  
  border:1rpx solid #e6e5e5;
  border-radius:10rpx;
  height: 76rpx;
  padding-left:20rpx;
  padding-right:20rpx;
}
.picker{

    background-color: #FFFFFF;
}
.radio{
  width:500rpx;
  margin-top:20rpx;
}
.radio_text{
  margin-left:15rpx;
}
.checkbox{
  display: block;
  margin-top:20rpx;
}
/**控制隐藏显示用样式**/
.header_view_hide{
  display: none;
}

.header_view_show{
  display: block;
}
/* 表单提交按钮样式 */
.submit-button{
  margin-top: 20rpx;
 margin-bottom:20rpx;
 background-color: #fd6267;
 
}
/* 诊断结果 */
.result_element{
  width:650rpx;
  margin-top:30rpx;
}
.result_element_title{
  margin-top:-47rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: black;
  display: block;
  margin-left:57rpx;
}
.result_element_space{
  margin-top:-183rpx;
  color: gray;
}
.result_element_images{
  width:45rpx;
  height:45rpx;
}